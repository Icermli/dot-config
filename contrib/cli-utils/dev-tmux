#!/bin/sh
# new a tmux session with several windows

session_name='dev'
tmux new-session -d -s $session_name
tmux rename-window 'cereal'
tmux split-window -v -p 35
tmux split-window -h
tmux new-window -n 'script'
tmux new-window -n 'lilac'
tmux new-window -n 'fun'
tmux send-keys -t $session_name:'cereal' "conda activate cereal" Enter "clear" Enter
tmux send-keys -t $session_name:'script' "conda activate myenv" Enter "clear" Enter
tmux send-keys -t $session_name:'lilac' "conda activate lilac" Enter "clear" Enter
tmux send-keys -t $session_name:'fun' "conda activate myenv" Enter "clear" Enter
tmux -2 attach-session -d
